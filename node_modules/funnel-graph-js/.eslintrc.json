{
  "parserOptions": {
      "ecmaVersion": 6
  },
  "extends": "airbnb-base",
  "rules": {
      "indent": ["error", 4],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "max-len": ["error", { "code": 121 }],
      "comma-dangle": ["error", "never"]
  },
  "globals": {
      "window": true,
      "document": true
  }
}
